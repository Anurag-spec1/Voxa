<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JARVIS ∞"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Status Panel -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Checking permissions..."
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/text_memory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Memory stats loading..."
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Control Panel -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Controls"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="START"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="STOP"
                        android:backgroundTint="#F44336" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Command"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_clear_memory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear Memory"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Features Panel -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_wake_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wake Word (Hey Jarvis)"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_vision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vision Mode (OCR)"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Root Mode (Optional)"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Panel -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_permissions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grant Permissions"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accessibility Settings" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JARVIS v∞ - God Mode Automation"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:textColor="#888888" />
    </LinearLayout>
</ScrollView>